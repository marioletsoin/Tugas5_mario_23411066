<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher_goku"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_goku_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TUGAS2"
        tools:targetApi="31">

        <activity
            android:name=".PilihanActivity"
            android:exported="false"
            android:label="@string/title_activity_pilihan"
            android:theme="@style/Theme.TUGAS2" />
        <!-- Hapus deklarasi MyAdapterActivity dan ItemDataActivity karena bukan Activity -->
        <activity
            android:name=".RcviewActivity"
            android:exported="false"
            android:label="@string/title_activity_rcview"
            android:theme="@style/Theme.TUGAS2" />
        <activity
            android:name=".MenuActivity"
            android:exported="false"
            android:label="@string/title_activity_menu"
            android:theme="@style/Theme.TUGAS2" />
        <activity
            android:name=".ForgotpwActivity"
            android:exported="false"
            android:label="@string/title_activity_forgotpw"
            android:theme="@style/Theme.TUGAS2" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.TUGAS2" />
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.TUGAS2" />
        <!-- Deklarasi DetailActivity yang benar -->
        <activity
            android:name=".DetailActivity"
            android:exported="false"
            android:label="Detail Activity"
            android:theme="@style/Theme.TUGAS2" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.TUGAS2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
